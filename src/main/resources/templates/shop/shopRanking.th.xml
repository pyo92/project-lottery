<?xml version="1.0" ?>
<thlogic>
    <attr sel="#header" th:replace="~{header :: header}"/>
    <attr sel="#footer" th:replace="~{footer :: footer}"/>

    <attr sel="#lotto-shop-ranking"
          th:each="shop, stat : ${ranking}"
          th:onclick="|location.href='@{/shop(shopId=${shop.id})}'|">
        <attr sel=".card-header" th:classappend="${shop.firstPrizeWinCount >= 10 ? '' : 'card-header-silver'}">
            <attr sel="span[0]" th:text="${stat.index + 1} + 'ìœ„ | '"/>
            <attr sel="span[1]" th:text="${shop.name}"/>
            <attr sel="span[2]" th:text="${shop.firstPrizeWinCount}"/>
            <attr sel="span[3]" th:text="${shop.secondPrizeWinCount}"/>
        </attr>
        <attr sel=".card-body">
            <attr sel="span[0]" th:text="${shop.address}"/>
        </attr>
    </attr>
</thlogic>